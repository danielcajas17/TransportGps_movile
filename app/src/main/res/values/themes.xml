<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TransportGps" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TransportGps" parent="Base.Theme.TransportGps" />

    <style name="Theme.TransportGps.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TransportGps.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TransportGps.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="Theme.TransportGps." parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/my_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logotransport</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.TransportGps</item>
    </style>
</resources>